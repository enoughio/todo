<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content=" initial-scale=1.0">
    <title>todo list</title>
    <link rel="stylesheet" href="./style.css">
</head>
<body>
    <main>

        <div id="container">
            <div class="addWrapper">

                <form id="addData" action="/add" method="POST"> <!-- Set the action to POST to /add -->
                    <input type="text" name="todo" id="todoInput" placeholder="Something to do">
                    <input type="submit" value="Add Todo">
                </form>
            
            </div>
                
            <div id="data">  
                <% if (locals.data) { %>

                    <% data.forEach((item) => { %>
                        
                        <form action="/done" class="todos">
                            <input type="checkbox">

                            <h3><%= item.task_id%></h3>
                            <h2><%= item.todo %></h2>
                            
                            <button formaction="/edit" onclick="editTodo()">
                                <div id="circle"></div>
                            </button>
                        </form>

                    <% }) %>
                
                <% } else { %>
                    <h1>No tasks yet!</h1>
                <% } %>

            </div>

        </div>

    </main>

    <script >



    </script>
</body>
</html>